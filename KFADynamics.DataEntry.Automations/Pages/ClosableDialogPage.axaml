<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" SystemDecorations="BorderOnly" MinHeight="100"
        x:Class="KFADynamics.DataEntry.Automations.Pages.ClosableDialogPage" SizeToContent="Height" WindowStartupLocation="CenterOwner" CanResize="False">

  <Border BorderThickness="3" Margin="5" BorderBrush="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="10" >
	  <Grid HorizontalAlignment="Stretch" RowDefinitions="Auto,*" VerticalAlignment="Stretch">
		  <Button Name="BtnClose" Click="Close_Clicked" HorizontalAlignment="Right">X</Button>
		  <ContentControl Grid.Row="1" Name="DialogContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

		  </ContentControl>
	  </Grid>
  </Border>
</Window>
