<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:pages="clr-namespace:KFADynamics.DataEntry.Automations.Pages"
             x:CompileBindings="True"
             x:DataType="pages:Home"
             x:Class="KFADynamics.DataEntry.Automations.Pages.Home">

  <StackPanel Margin="16, 0" MaxWidth="1080">
    <StackPanel.Styles>
      <Style Selector="TextBlock.Content, TextBlock.Subheadline">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
      </Style>
    </StackPanel.Styles>

    <Image Width="1004" Height="301" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,40" Source="avares://KFADynamics.DataEntry.Automations/Assets/KFADynamics.png"/> 
  </StackPanel>
</UserControl>